<section class="item-detail">
    <h1 class="item-title">{{title}}</h1>
    <img class="item-detail-img" src="{{product.imgSrc}}">
    <p class="item-description">{{product.description}}</p>
    <div class="item">
        <div class="detail">
            <h5>Brand: <a href="{{product.brand.url}}">{{product.brand.name}} </a> </h5>
            <h5>Category: <a href="{{product.category.url}}">{{product.category.name}} </a></h5>
        </div>
        <div class="detail">
            <h5>In Stock: {{product.inStock}}</h5>
            <h5>Price: ${{product.price}}</h5>
        </div>
    </div>

    <!-- Button trigger update or delete products modal -->
    <div class="modal-btn">
        <button type="button" class="btn btn-lg btn-warning" data-bs-toggle="modal" data-bs-target="#updateModal">
            Update Product
        </button>
        <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Delete Product
        </button>
    </div>

    <!-- Delete Product Modal -->
    <div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">{{title}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="POST" action="{{product.url}}/delete">
                        <input type="hidden" name="productid" value={{product._id}} required="true">
                        <button type="submit" role="button" class="btn btn-danger"
                            data-bs-dismiss="modal">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Product modal -->
    <div class="modal fade" id="updateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">{{title}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="{{product.url}}/update" enctype="multipart/form-data">

                        <!-- Modal Form -->

                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Name: </span>
                            <input type="text" class="form-control" name="name" placeholder="Product Name" value="{{product.name}}"
                                autocomplete="off" aria-label="Product name" aria-describedby="basic-addon1"
                                required="true">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Description: </span>
                            <textarea class="form-control" name="description" aria-label="With textarea" required="true">{{product.description}}</textarea>
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="category-list">Category: </label>
                            <select class="form-select" name="category" id="category-list">
                                {{#each categories}}
                                    <option value={{this._id}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="brand-list">Brand: </label>
                            <select class="form-select" name="brand" id="brand-list">
                                {{#each brands}}
                                    <option value={{this._id}} >{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Price: </span>
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" placeholder="Price" name="price" value="{{product.price}}"
                                autocomplete="off" aria-label="Price" aria-describedby="basic-addon1" required="true">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">In Stock: </span>
                            <input type="text" class="form-control" name="inStock" placeholder="In Stock" value="{{product.inStock}}"
                                autocomplete="off" aria-label="In Stock" aria-describedby="basic-addon1"
                                required="true">
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupFile01">Image</label>
                            <input type="file" name="image" class="form-control" id="inputGroupFile01" required="true">
                        </div>
                        <!--modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <input type="hidden" name="productid" value={{product._id}} required="true">
                            <button type="submit" role="button" class="btn btn-warning"
                                data-bs-dismiss="modal">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>